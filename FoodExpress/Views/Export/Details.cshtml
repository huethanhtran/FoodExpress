@model IEnumerable<FoodExpress.Models.ExportDetail>
@using FoodExpress.Models.Element;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Export Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="margin-bottom:30px; margin-right:30px">
            Title
        </dt>

        <dd style="margin-bottom:30px">
            <span>
                @Model.FirstOrDefault().Export.Title
            </span>
        </dd>
        <dt style="margin-bottom:30px; margin-right:30px">
            Export Date
        </dt>

        <dd style="margin-bottom:30px">
            @*@Html.TextBoxFor(model => model.FirstOrDefault().Order.AddressOrder)*@
            <span>
                @Model.FirstOrDefault().Export.ExportDate.Value.ToString("yyyy/MM/dd")
            </span>
        </dd>

        <dt style="margin-bottom:30px; margin-right:30px">
            Ingredient
        </dt>
        <dd style="margin-bottom:30px">
            <table class="table">
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Unit
                </th>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span>@item.Ingredient.NameIngredient</span>
                        </td>
                        <td>
                            <span>@item.Price</span>
                        </td>
                        <td>
                            <span>@item.Quantity</span>
                        </td>
                        <td>
                            <span>@Enum.GetName(typeof(Unit), item.Unit)</span>
                        </td>
                    </tr>
                }
            </table>

        </dd>
    </dl>

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
